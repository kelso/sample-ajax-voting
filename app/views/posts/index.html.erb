<h1>Clanky</h1>

<% @posts.each do |post| %>
  
  <h2><%= post.title %></h2>
  <p><%= post.body %>

  <div class='voting-bar'>
    <%= link_to image_tag('like.png'), "#" %>
    <%= post.likes_count %> likes

    <%= link_to image_tag('dislike.png'), "#" %>
    <%= post.dislikes_count %> dislikes
  </div>

<% end %>
