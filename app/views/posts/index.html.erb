<h1>Clanky</h1>

<% @posts.each do |post| %>
  
  <h2><%= post.title %></h2>
  <p><%= post.body %>

  <div class='voting-bar'>
    <%= link_to image_tag('like.png'), like_post_path(post), method: :patch, remote: true %>
    <span id='<%= "likes_for_#{post.id}" %>'><%= post.likes_count %></span> likes

    <%= link_to image_tag('dislike.png'), dislike_post_path(post), method: :patch, remote: true %>
    <span id='<%= "dislikes_for_#{post.id}" %>'><%= post.dislikes_count %></span> dislikes
  </div>

<% end %>
